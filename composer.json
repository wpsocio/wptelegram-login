{
	"name": "wptelegram/login",
	"version": "1.10.3",
	"description": "Let the users login to your website with their Telegram and make it simple for them to get connected and let them receive their email notifications on Telegram.",
	"require-dev": {
		"wp-coding-standards/wpcs": "dev-develop"
	},
	"scripts": {
		"post-install-cmd": [
			"composer run set-config"
		],
		"set-config": [
			"\"vendor/bin/phpcs\" --config-set installed_paths ../../../vendor/wp-coding-standards/wpcs",
			"\"vendor/bin/phpcs\" --config-set default_standard WordPress"
		],
		"lint": "\"vendor/bin/phpcs\" --standard=phpcs.xml --extensions=php src/",
		"lint:skip-warnings": "\"vendor/bin/phpcs\" --standard=phpcs.xml --extensions=php -n src/",
		"lint:fix": "\"vendor/bin/phpcbf\" --standard=phpcs.xml --extensions=php src/"
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": false
		}
	}
}
